#!/bin/sh
basedir=$(dirname "$(echo "$0" | sed -e 's,\\,/,g')")

case `uname` in
    *CYGWIN*|*MINGW*|*MSYS*) basedir=`cygpath -w "$basedir"`;;
esac

if [ -x "$basedir/jolie" ]; then
  exec "$basedir/jolie"  "$basedir/../@jolie/jot/launcher.ol" "$@"
else 
  exec jolie  "$basedir/../@jolie/jot/launcher.ol" "$@"
fi
